{
  "name": "Elm KILLA",
  "version": "1.0.1.1",
  "author": "Roi Driscoll & Stepan Khodzhaian for Carwow",
  "description": "The quickest way to kill/hide the elm debug window",
  "permissions": ["activeTab",
                  "tabs",
                  "storage",
                  "http://*/",
                  "https://*/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/elm-lives16.png",
      "32": "images/elm-lives32.png",
      "48": "images/elm-lives48.png",
      "128": "images/elm-lives128.png"
    }
  },
  "icons": {
    "16": "images/elm-dies16.png",
    "32": "images/elm-dies32.png",
    "48": "images/elm-dies48.png",
    "128": "images/elm-dies128.png"
  },
  "manifest_version": 2
}
